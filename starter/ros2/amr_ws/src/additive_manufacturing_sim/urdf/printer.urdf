<?xml version="1.0"?>
<robot name="additive_printer">
  
  <!-- Base Frame -->
  <link name="world"/>
  
  <!-- Printer Base -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.8 0.8 0.05"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.8 0.8 0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="10"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
  </link>
  
  <joint name="world_to_base" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.025" rpy="0 0 0"/>
  </joint>
  
  <!-- X轴导轨 -->
  <link name="x_rail">
    <visual>
      <geometry>
        <box size="0.02 0.7 0.02"/>
      </geometry>
      <material name="silver">
        <color rgba="0.8 0.8 0.8 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.02 0.7 0.02"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>
  
  <joint name="base_to_x_rail" type="prismatic">
    <parent link="base_link"/>
    <child link="x_rail"/>
    <origin xyz="0 0 0.5" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-0.35" upper="0.35" velocity="0.1" effort="100"/>
  </joint>
  
  <!-- Y轴滑块 -->
  <link name="y_carriage">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>
  
  <joint name="x_rail_to_y_carriage" type="prismatic">
    <parent link="x_rail"/>
    <child link="y_carriage"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.35" upper="0.35" velocity="0.1" effort="100"/>
  </joint>
  
  <!-- Z轴挤出头 -->
  <link name="extruder">
    <visual>
      <geometry>
        <cylinder radius="0.02" length="0.1"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.02" length="0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>
  
  <joint name="y_carriage_to_extruder" type="prismatic">
    <parent link="y_carriage"/>
    <child link="extruder"/>
    <origin xyz="0 0 -0.05" rpy="0 0 0"/>
    <axis xyz="0 0 -1"/>
    <limit lower="0" upper="0.4" velocity="0.05" effort="50"/>
  </joint>
  
  <!-- 喷嘴 - 使用小圆柱体代替圆锥 -->
  <link name="nozzle">
    <visual>
      <geometry>
        <cylinder radius="0.003" length="0.02"/>
      </geometry>
      <material name="orange">
        <color rgba="1 0.5 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.003" length="0.02"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.01"/>
      <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001"/>
    </inertial>
  </link>
  
  <joint name="extruder_to_nozzle" type="fixed">
    <parent link="extruder"/>
    <child link="nozzle"/>
    <origin xyz="0 0 -0.06" rpy="0 0 0"/>
  </joint>
  
  <!-- 打印平台 -->
  <link name="build_plate">
    <visual>
      <geometry>
        <box size="0.6 0.6 0.01"/>
      </geometry>
      <material name="glass">
        <color rgba="0.7 0.7 1 0.8"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.6 0.6 0.01"/>
      </geometry>
    </collision>
  </link>
  
  <joint name="base_to_build_plate" type="fixed">
    <parent link="base_link"/>
    <child link="build_plate"/>
    <origin xyz="0 0 0.03" rpy="0 0 0"/>
  </joint>
  
</robot>