cmake_minimum_required(VERSION 3.16 FATAL_ERROR)
project(m++_api)

set(CMAKE_CXX_COMPILER /usr/bin/mpicxx.openmpi)

find_package(MPI)
if(MPI_FOUND)
  message("MPI FOUND")
  message(${MPI_LIBRARIES})
  include_directories(${MPI_INCLUDE_DIRS})
  link_directories(${MPI_LIBRARY_DIRS})
  add_definitions(${MPI_DEFINITIONS})
endif()

add_definitions(-DTETLIBRARY)
include_directories("src")
include_directories(${CMAKE_BINARY_DIR}/../../../../toolkit/install/tetgen_install/include)
message(${CMAKE_BINARY_DIR})
aux_source_directory(solver/src solver_DIR_SRCS)
add_executable (AMSolver ${solver_DIR_SRCS} src/Identify.C src/MatrixGraph.C src/Algebra.C src/Shape.C src/Point.C src/Parallel.C src/Time.C src/ctools.C src/IO.C src/Mesh.C src/Cell.C src/Distribution.C src/Plot.C src/Quadrature.C src/DoF.C src/Sparse.C src/Interface.C src/Discretization.C src/LinearSolver.C src/DD.C src/Preconditioner.C src/TimeSeries.C src/ESolver.C src/Transfer.C src/Element.C src/FaceElement.C src/Newton.C src/Newmark.C src/Euler.C src/Small.C src/Schur.C)
target_link_libraries (AMSolver /usr/lib/x86_64-linux-gnu/libblas.so /usr/lib/x86_64-linux-gnu/liblapack.so ${MPI_LIBRARIES} /usr/lib/x86_64-linux-gnu/libsuperlu.so ${CMAKE_BINARY_DIR}/../../../../toolkit/install/tetgen_install/lib/libtetgen.so)
set_target_properties(AMSolver PROPERTIES RUNTIME_OUTPUT_DIRECTORY ${CMAKE_BINARY_DIR})

message(${CMAKE_BINARY_DIR})
target_link_libraries (AMSolver ${CMAKE_BINARY_DIR}/../../../../toolkit/install/cura_engine_install/lib/lib_CuraEngine.a)
target_link_libraries (AMSolver ${CMAKE_BINARY_DIR}/../../../../toolkit/install/cura_engine_install/lib/libclipper.a)
target_link_libraries (AMSolver ${CMAKE_BINARY_DIR}/../../../../toolkit/install/protobuf_install/lib/libprotobuf.so)
target_link_libraries (AMSolver ${CMAKE_BINARY_DIR}/../../../../toolkit/install/protobuf_install/lib/libprotobuf-lite.so)
target_link_libraries (AMSolver ${CMAKE_BINARY_DIR}/../../../../toolkit/install/protobuf_install/lib/libprotoc.so)
target_link_libraries (AMSolver ${CMAKE_BINARY_DIR}/../../../../toolkit/install/libarcus_install/lib/libArcus.so)
target_link_libraries (AMSolver /usr/lib/x86_64-linux-gnu/libgomp.so.1)

file(COPY "log" DESTINATION ${CMAKE_BINARY_DIR})
file(COPY "data/vtk" DESTINATION ${CMAKE_BINARY_DIR}/data)
file(COPY "conf" DESTINATION ${CMAKE_BINARY_DIR})
file(COPY "solver/conf" DESTINATION ${CMAKE_BINARY_DIR}/solver)
